generator client {
        provider = "prisma-client-js"
}

datasource db {
        provider = "postgresql"
        url      = env("DATABASE_URL")
}

model Usuario {
        id             String @id @default(uuid())
        nomeCompleto   String
        numeroTelefone String
        genero         String
        email          String @unique

        veiculos Veiculo[]
}

model Veiculo {
        placaVeiculo String  @id
        modelo       String
        ano          Int
        cor          String
        idUsuario    String
        usuario      Usuario @relation(fields: [idUsuario], references: [id], onDelete: Cascade)

        lavagens        Lavagem[]
        estacionamentos Estacionamento[]
}

model Lavagem {
        id           String   @id @default(uuid())
        tipoLavagem  String
        data         DateTime
        placaVeiculo String
        veiculo      Veiculo  @relation(fields: [placaVeiculo], references: [placaVeiculo], onDelete: Cascade)
        preco        Float
}

model Estacionamento {
        id           String   @id @default(uuid())
        dataEntrada  DateTime
        dataSaida    DateTime
        preco        Float
        placaVeiculo String
        veiculo      Veiculo  @relation(fields: [placaVeiculo], references: [placaVeiculo], onDelete: Cascade)
}
